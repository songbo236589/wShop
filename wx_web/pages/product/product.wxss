.fiexd-cart.animate{
  -webkit-animation: aCartScale 200ms cubic-bezier(.17,.67,.83,.67);
          animation: aCartScale 200ms cubic-bezier(.17,.67,.83,.67);
  animation-fill-mode: backwards;
}

@-webkit-keyframes aCartScale{
  0%{
    
    -webkit-transform: scale(1.1);
            transform: scale(1.1);
  }
  100% {
    -webkit-transform: scale(1);
            transform: scale(1);
  }
}













.weui-tab{
  position: relative;
  height: 95rpx;
}
.weui-navbar{
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  position:absolute;
  top:0;
  width:100%;
  border-bottom:1rpx solid #CCCCCC;
}
.weui-navbar__item{
  position:relative;
  display:block;
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
  padding:13px 0;
  text-align:center;
  font-size:0;
}

.weui-navbar__title{
  display:inline-block;
  font-size:15px;
  max-width:8em;
  width:auto;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  word-wrap:normal;
}

.weui-navbar__item.weui-bar__item_on {
  color:#FF4E22;
}



.weui-navbar__slider {
  position:absolute;
  content:" ";
  left:0;
  bottom:0;
  width:12%;
  height:3px;
  background-color:#FF4E22;
  -webkit-transition:-webkit-transform .3s;
  transition:-webkit-transform .3s;
  transition:transform .3s;
  transition:transform .3s, -webkit-transform .3s;

}











