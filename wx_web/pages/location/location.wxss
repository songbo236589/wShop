/* 新增地址按钮 */
.location{
  height: 20rpx;
}
.add_location{
  width: 92%;
  height: 66rpx;
  text-align: center;
  margin: 0 auto 20rpx;
  background-color: #FF4E22;
  border-radius: 10rpx;
  color: #ffffff;
  line-height: 66rpx;
}


/* 主体代码 */

.cart-box {
  overflow-x:hidden;
  font-size:28rpx;
}

.cart-item{
  display:flex;
  padding:20rpx;
  background-color:#ffffff;
  border-bottom:1rpx solid #D0D0D7;
}

.cart-item-main{
  width:100%;
  display:flex;
}
.cart-item-checkbox{
  width:84rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}

.cart-item-checkbox image {
  height:44rpx;
  width:44rpx;
}

.cart-item-word{
  display:flex;
  flex:1;
  flex-direction:column;
  justify-content:space-between;
  padding:8rpx 0;
  margin:0 20rpx;
  box-sizing:border-box;
  color:#454553;
}


.title-box{
  display:flex;
  justify-content:space-between;
  margin-bottom: 15rpx;
}

.operation{
  height: 45rpx;
  display:flex;
  justify-content:flex-end;
}
.operation view{
  color: #ffffff;
  line-height: 45rpx;
  width: 88rpx;
  height: 100%;
  text-align: center;
  margin-left: 30rpx;
}
.operation-delete{
    background-color:#FF4E22;
}
