/*----------------------------------------------------页面初始化加载中动画-------------------------------------------------------*/

.loading{
  width: 100%;
  height: 100%;
  top:0;
  z-index: 500;
  position: fixed;
  background-color: #f8f8f8;
}
.loading_box {
  width: 160rpx;
  margin:0 auto;
  position: absolute;
  top: 40%;
  left: 40%;
  line-height: 160rpx;
  text-align: center;
  border-radius: 30rpx; 
  height: 160rpx;
  background-color: #ffffff;
  
}

.loading_box>view {
  display: inline-block;
  vertical-align:middle; 
}
.loading3 {
  width: 20rpx;
  height: 20rpx;
  background: #f6a623;
  border-radius: 50%;
  margin-left: 15rpx;
}

.loading3_1 {
  -webkit-animation: loading3 1s linear infinite alternate;
  animation: loading3 1s linear infinite alternate;
}

.loading3_2 {
  -webkit-animation: loading3 1s linear infinite alternate;
  animation: loading3 1s linear infinite alternate;
  animation-delay: 0.5s;
}

.loading3_3 {
  -webkit-animation: loading3 1s linear infinite alternate;
  animation: loading3 1s linear infinite alternate;
  animation-delay: 1s;
}

@-webkit-keyframes loading3 {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}

@keyframes loading3 {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}



/* --------------------------------------------上啦加载更多动画------------------------------------------------ */



.loading_box1{
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}

.loading_box1>view{
  display: inline-block;
  vertical-align:middle; 
}

.loading1 {
  background: url('data:image/svg+xml;base64,') no-repeat;
  background-size: cover;
  width: 50rpx;
  height: 50rpx;
  -webkit-animation: loading 1s steps(12, end) infinite;
  animation: loading 1s steps(12, end) infinite;
}

@-webkit-keyframes loading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
    transform: rotate3d(0, 0, 1, 360deg);
  }
}

@keyframes loading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
    transform: rotate3d(0, 0, 1, 360deg);
  }
}
